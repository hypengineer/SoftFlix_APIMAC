@model SoftFlix.FrontEnd.Models.MediaResponseModel
<!DOCTYPE html>
    <html>
    <head>
        <title>Create Category</title>
    </head>
    <body>

    @{
        if (TempData["errorMessage"] != null)
        {
            <p style="color:red">
            @TempData["errorMessage"]?.ToString()
            </p>
        }
        }
    <form asp-action="Create" asp-controller="Medias" method="post">
        <label>Media Name</label>
        <input type="text" asp-for="@Model.Name" />
        <label>Description</label>
        <input type="text" asp-for="@Model.Description" />
        <label>Rating</label>
        <input type="text" asp-for="@Model.IMDBRating" />
        <label>Passive</label>
        <input type="checkbox" asp-for="@Model.Passive" />

        <div>
            <a asp-action="Index" asp-asp-controller="Medias">Geri Dön</a>
            <button type="submit">Create </button>
        </div>
    </form>
    
    </body>
    </html>